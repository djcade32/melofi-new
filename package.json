{
  "name": "melofi-new",
  "version": "2.0.0",
  "main": "electron/electron.mjs",
  "private": true,
  "build": {
    "appId": "com.melofi",
    "productName": "Melofi",
    "icon": "build/icons/icons/icon",
    "files": [
      ".next/**/*",
      "electron/electron.mjs",
      "electron/preload.mjs",
      "authStore.mjs",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/",
        "to": "resources",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "scripts": {
    "dev": "next dev",
    "test:unit": "jest",
    "emulators:start": "firebase emulators:start --only auth,firestore",
    "cy:open": "cypress open",
    "cy:run": "cypress run --headless",
    "test:e2e": "concurrently \"firebase emulators:start\" \"NODE_ENV=test start-server-and-test dev http://localhost:3000 cy:open\"",
    "test:e2e:headless": "concurrently \"firebase emulators:start\" \"NODE_ENV=test start-server-and-test dev http://localhost:3000 cy:run\"",
    "test:e2e:headless:github": "start-server-and-test dev http://localhost:3000 cy:run",
    "electron": "electron electron/electron.mjs",
    "dev:electron": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && npm run electron\"",
    "start:electron": "concurrently \"npm run start\" \"wait-on http://localhost:3000 && npm run electron\"",
    "start": "next start",
    "lint": "next lint",
    "build": "next build",
    "build:desktop": "electron-builder",
    "build-electron-builder": "electron-builder",
    "upload": "node scripts/upload.js",
    "build-and-upload": "npm run build-electron-builder && npm run upload"
  },
  "dependencies": {
    "@emotion/css": "^11.13.5",
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@mui/material": "^6.1.2",
    "@react-oauth/google": "^0.12.1",
    "@stripe/stripe-js": "^5.7.0",
    "@types/is-hotkey": "^0.1.10",
    "date-fns": "^4.1.0",
    "electron-store": "^10.0.1",
    "electron-updater": "^6.6.2",
    "firebase": "^11.4.0",
    "firebase-admin": "^12.7.0",
    "firebase-functions": "^6.1.0",
    "framer-motion": "^12.5.0",
    "glob": "^10.4.5",
    "idb": "^8.0.0",
    "is-hotkey": "^0.2.0",
    "next": "14.2.13",
    "next-pwa": "^5.6.0",
    "nextjs-google-analytics": "^2.3.7",
    "react": "^18",
    "react-dom": "^18",
    "react-draggable": "^4.4.6",
    "react-icons": "^5.3.0",
    "react-quill": "^2.0.0",
    "react-resizable": "^3.0.5",
    "recharts": "^2.15.1",
    "screenfull": "^6.0.2",
    "sharp": "^0.33.5",
    "slate": "^0.110.2",
    "slate-history": "^0.110.3",
    "slate-react": "^0.111.0",
    "stripe": "^18.0.0",
    "uuid": "^11.0.3",
    "youtube-player": "^5.6.0",
    "zustand": "^5.0.0-rc.2"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.26.3",
    "@cypress/webpack-preprocessor": "^6.0.2",
    "@types/cypress": "^0.1.6",
    "@types/lodash": "^4.17.13",
    "@types/node": "^20.17.24",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/react-resizable": "^3.0.8",
    "@types/youtube-player": "^5.5.11",
    "@vercel/next": "^4.7.4",
    "babel-loader": "^9.2.1",
    "concurrently": "^9.1.0",
    "critters": "^0.0.23",
    "cypress": "^13.17.0",
    "cypress-real-events": "^1.14.0",
    "electron": "^35.1.2",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.13",
    "file-loader": "^6.2.0",
    "jest": "^29.7.0",
    "start-server-and-test": "^2.0.8",
    "ts-loader": "^9.5.1",
    "typescript": "5.8.2",
    "wait-on": "^8.0.1",
    "webpack": "^5.97.1",
    "workbox-build": "^7.3.0"
  },
  "type": "module"
}
